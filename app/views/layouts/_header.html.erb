<header>
  <nav class="navbar navbar-expand-lg navbar-dark bg-success">
    <div class="container-fluid">
      <%= link_to 'Friend App', root_path, class: "navbar-brand"%>
     
    <div class="collapse navbar-collapse d-flex" id="navbarSupportedContent">
      <ul class="nav navbar-nav navbar-right me-auto mb-2 mb-lg-0">
        <% if user_signed_in? %>
          <li class="nav-item">
            <%= link_to 'Friends List', friends_path, class: "nav-link active" %>
          </li>
        <% end %>
        <li class="nav-item">
          <%= link_to 'About Us', about_path, class: "nav-link active" %>
        </li>
        <% unless user_signed_in? %>
        <li class="nav-item">
          <%= link_to 'Sign Up', new_user_registration_path, class: "nav-link active" %>
        </li>
        <li class="nav-item">
          <%= link_to 'Sign In', new_user_session_path, class: "nav-link active" %>
        </li>
        <% else %>
        <div class="dropdown">
          <button class="btn btn-success dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
            <%= image_tag "person-square.svg", style: "width: 25px;" %>
          </button>
          <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
            <li><%= link_to 'Add Friend', new_friend_path, class: "dropdown-item" %></li>
            <li><%= link_to 'Profile', edit_user_registration_path, class: "dropdown-item" %></li>
            <li><%= link_to 'Sign Out', destroy_user_session_path, method: :delete, class: "dropdown-item" %></li>
          </ul>
        </div>
        
        <% end %>
      </ul>
    </div>
    </div>
  </nav>
</header>